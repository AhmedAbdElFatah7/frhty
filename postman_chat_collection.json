{
	"info": {
		"name": "Chat API Collection",
		"description": "API endpoints for chat/messaging system between users",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{api_token}}",
				"type": "string"
			}
		]
	},
	"item": [
		{
			"name": "Get All Conversations",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/conversations",
					"host": ["{{base_url}}"],
					"path": ["api", "conversations"]
				},
				"description": "Get all conversations for the authenticated user with last message and unread count"
			},
			"response": []
		},
		{
			"name": "Get Conversation with User",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/conversations/:userId",
					"host": ["{{base_url}}"],
					"path": ["api", "conversations", ":userId"],
					"variable": [
						{
							"key": "userId",
							"value": "2",
							"description": "ID of the user to chat with"
						}
					]
				},
				"description": "Get or create a conversation with a specific user. Returns all messages in the conversation. If conversation doesn't exist, it will be created automatically."
			},
			"response": []
		},
		{
			"name": "Send Message",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"receiver_id\": 2,\n    \"message\": \"مرحبا، كيف حالك؟\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/messages/send",
					"host": ["{{base_url}}"],
					"path": ["api", "messages", "send"]
				},
				"description": "Send a message to a user. Creates a new message in an existing or new conversation."
			},
			"response": []
		},
		{
			"name": "Get Unread Messages Count",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/messages/unread-count",
					"host": ["{{base_url}}"],
					"path": ["api", "messages", "unread-count"]
				},
				"description": "Get the total number of unread messages across all conversations"
			},
			"response": []
		},
		{
			"name": "Delete Conversation",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/conversations/:conversationId",
					"host": ["{{base_url}}"],
					"path": ["api", "conversations", ":conversationId"],
					"variable": [
						{
							"key": "conversationId",
							"value": "1",
							"description": "ID of the conversation to delete"
						}
					]
				},
				"description": "Delete a conversation and all its messages"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "api_token",
			"value": "",
			"type": "string"
		}
	]
}
