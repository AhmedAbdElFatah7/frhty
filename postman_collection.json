{
	"info": {
		"_postman_id": "farhty-api-collection",
		"name": "Farhty API - Celebrity & Posts",
		"description": "API Collection for Celebrity Profile (Search, Follow) and Posts (Create, Like)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Celebrity Profile",
			"item": [
				{
					"name": "Search Celebrities",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/celebrities/search?q=أحمد",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"celebrities",
								"search"
							],
							"query": [
								{
									"key": "q",
									"value": "أحمد",
									"description": "Search term (min 2 characters)"
								}
							]
						},
						"description": "Search for celebrities by name or username"
					},
					"response": []
				},
				{
					"name": "Get Celebrity Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/celebrities/{{celebrity_id}}/profile",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"celebrities",
								"{{celebrity_id}}",
								"profile"
							]
						},
						"description": "Get complete celebrity profile including:\n- User data (name, image, cover, followers, etc)\n- Platforms\n- Recent posts (last 10)\n- Active stories (not expired)\n- Active contests (not ended)"
					},
					"response": []
				},
				{
					"name": "Toggle Follow/Unfollow",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/celebrities/{{celebrity_id}}/toggle-follow",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"celebrities",
								"{{celebrity_id}}",
								"toggle-follow"
							]
						},
						"description": "Follow or unfollow a celebrity (toggle)"
					},
					"response": []
				}
			],
			"description": "Celebrity profile endpoints including search, profile view, and follow/unfollow"
		},
		{
			"name": "Posts & Likes",
			"item": [
				{
					"name": "Get All Posts",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/posts?user_id=&per_page=20",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"posts"
							],
							"query": [
								{
									"key": "user_id",
									"value": "",
									"description": "Filter by specific user (optional)"
								},
								{
									"key": "per_page",
									"value": "20",
									"description": "Number of posts per page (default: 20)"
								}
							]
						},
						"description": "Get all posts with pagination, ordered by newest first"
					},
					"response": []
				},
				{
					"name": "Create Post (Celebrity Only)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "content",
									"value": "هذا منشور جديد من Celebrity",
									"description": "Post content (required, max 5000 characters)",
									"type": "text"
								},
								{
									"key": "media",
									"description": "Image or video file (optional, max 50MB)",
									"type": "file",
									"src": []
								},
								{
									"key": "media_type",
									"value": "image",
									"description": "Type: image or video (optional)",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/posts",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"posts"
							]
						},
						"description": "Create a new post (celebrity role only)"
					},
					"response": []
				},
				{
					"name": "Delete Post",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/posts/{{post_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"posts",
								"{{post_id}}"
							]
						},
						"description": "Delete a post (only owner can delete)"
					},
					"response": []
				},
				{
					"name": "Toggle Like/Unlike Post",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/posts/{{post_id}}/toggle-like",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"posts",
								"{{post_id}}",
								"toggle-like"
							]
						},
						"description": "Like or unlike a post (toggle)"
					},
					"response": []
				}
			],
			"description": "Posts management and likes functionality"
		},
		{
			"name": "Authentication (Helper)",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.environment.set(\"access_token\", jsonData.data.token);",
									"        console.log(\"Token saved: \" + jsonData.data.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phone\": \"01234567890\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"login"
							]
						},
						"description": "Login to get access token"
					},
					"response": []
				},
				{
					"name": "Verify OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.environment.set(\"access_token\", jsonData.data.token);",
									"        console.log(\"Token saved: \" + jsonData.data.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phone\": \"01234567890\",\n    \"otp\": \"123456\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/verify-otp",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"verify-otp"
							]
						},
						"description": "Verify OTP and get access token (automatically saves to environment)"
					},
					"response": []
				}
			],
			"description": "Authentication endpoints to get access token"
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "celebrity_id",
			"value": "1",
			"type": "string"
		},
		{
			"key": "post_id",
			"value": "1",
			"type": "string"
		}
	]
}
