	"item": [
		{
			"name": "Notifications",
			"item": [
				{
					"name": "Get All Notifications",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/notifications?unread_only=false&limit=50",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"notifications"
							],
							"query": [
								{
									"key": "unread_only",
									"value": "false",
									"description": "true = only unread, false = all notifications"
								},
								{
									"key": "limit",
									"value": "50",
									"description": "Number of notifications to return (default: 50)"
								}
							]
						},
						"description": "Get all notifications for the authenticated user.\n\nQuery Parameters:\n- `unread_only` (boolean): Return only unread notifications\n- `limit` (integer): Number of notifications to return (default: 50)\n\nReturns:\n- List of notifications\n- Unread count\n- Total notifications"
					},
					"response": []
				},
				{
					"name": "Get Unread Notifications Only",
					"request": {
						"method": "GET",
						"header": [
