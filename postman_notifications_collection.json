								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/notifications/unread-count",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"notifications",
								"unread-count"
							]
						},
						"description": "Get the count of unread notifications.\n\nUseful for showing a badge on the notifications icon in the app."
					},
					"response": []
				},
				{
					"name": "Mark Notification as Read",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/notifications/{{notification_id}}/mark-read",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"notifications",
								"{{notification_id}}",
								"mark-read"
							]
						},
						"description": "Mark a specific notification as read.\n\nUsually called when user clicks on a notification."
					},
					"response": []
				},
				{
					"name": "Mark All Notifications as Read",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/notifications/mark-all-read",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"notifications",
								"mark-all-read"
							]
						},
						"description": "Mark all user's notifications as read.\n\nUseful for \"Mark all as read\" button in the notifications screen.\n\nReturns the number of notifications that were updated."
					},
					"response": []
				}
			],
			"description": "Endpoints for managing notifications"
		},
